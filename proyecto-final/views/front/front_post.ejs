<!doctype html>
<html lang="en">
    <%- include('../partials/head', {title: "Frontpage - new link"}) %>

<body>
    <% if (typeof karma == "undefined") {
        karma = 0 
    } %>
    <%- include('../partials/nav', {user: locals.user, karma}) %>
    <%- include('../partials/jumbotron', {name: "Frontpage"}) %>
    <span id="auth"><%= locals.isauth %></span>

    <div class="grid-container">
        <div class="sidebar">
            <%- include('../partials/sidebar_index_actions') %>
            <% if (typeof subscribed == "undefined") {
                subscribed = 0 
            } %>
            <%- include('../partials/sidebar_index_subscribed', {locals, subscribed}) %>
        </div>

        <div class="main">
            <h4>new post</h4>
            <div class="submit-wrapper">
                <% if(!locals.user) { %>
                    You must be logged in to submit a post / link / subreddit.
                <% } else { %>
                <form id="form-post-or-link" action="/submit/post" method="post">
                    <input type="text" class="form-control" name="title" placeholder="Enter title" required><br>
                    <textarea class="form-control" rows="5" name="text" placeholder="Enter body" required></textarea><br>
                    <input type="text" class="form-control" name="subreddit" id="subreddit_form" placeholder="Enter subreddit" required><br>
                    <div class="invalid-feedback">That subreddit doesn't exist!</div><br>
                    <button type="submit" class="btn btn-primary auth-req">Submit</button>
                </form>
                <% } %>
            </div>
        </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/10.7.1/validator.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/autosize@4.0.2/dist/autosize.min.js"></script>

        <script src="/js/index.js"></script>
        <script src="/js/submit.js"></script>
</body>

</html>